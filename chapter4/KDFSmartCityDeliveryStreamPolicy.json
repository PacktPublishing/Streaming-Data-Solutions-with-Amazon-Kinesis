{
    "Version": "2012-10-17",  
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "glue:GetTable",
                "glue:GetTableVersion",
                "glue:GetTableVersions"
            ],
            "Resource": [
                "arn:aws:glue:us-east-1:862656071619:catalog",
                "arn:aws:glue:us-east-1:862656071619:database/smartcitybikes",
                "arn:aws:glue:us-east-1:862656071619:table/smartcitybikes/bikestationsdata"
            ]
        },
        {      
            "Effect": "Allow",      
            "Action": [
                "s3:AbortMultipartUpload",
                "s3:GetBucketLocation",
                "s3:GetObject",
                "s3:ListBucket",
                "s3:ListBucketMultipartUploads",
                "s3:PutObject"
            ],      
            "Resource": [        
                "arn:aws:s3:::kdf-smartcitybikes-data",
                "arn:aws:s3:::kdf-smartcitybikes-data/*"    
            ]    
        },        
        {
            "Effect": "Allow",
            "Action": [
                "kinesis:DescribeStream",
                "kinesis:GetShardIterator",
                "kinesis:GetRecords",
                "kinesis:ListShards"
            ],
            "Resource": ["arn:aws:kinesis:us-east-1:862656071619:stream/KDSSmartCityBikesStream"]
        },
        {
           "Effect": "Allow",
           "Action": [
               "logs:PutLogEvents"
           ],
           "Resource": [
               "arn:aws:logs:us-east-1:862656071619:log-group:/aws/kinesisfirehose/KDFSmartCityBikesDelivery:log-stream:S3Delivery",
               "arn:aws:logs:us-east-1:862656071619:log-group:/aws/kinesisfirehose/KDFSmartCityBikesDeliveryBackup:log-stream:S3Delivery"
           ]
        },
        {
           "Effect": "Allow", 
           "Action": [
               "lambda:InvokeFunction", 
               "lambda:GetFunctionConfiguration" 
           ],
           "Resource": "arn:aws:lambda:us-east-1:862656071619:function:KDFLookupAddressTransform:$LATEST"
        }
    ]
}